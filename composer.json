{
	"name": "akeeba/buildtools",
	"description": "Build utilities for Akeeba software",
	"license": "GPLv3",
	"minimum-stability": "beta",
	"repositories": [
		{
			"type": "package",
			"package": {
				"name": "akeeba/s3",
				"version": "master",
				"source": {
					"url": "https://github.com/akeeba/s3",
					"type": "git",
					"reference": "master"
				}
			}
		}
	],
	"require": {
		"php": "^7.3",
		"ext-curl": "*",
		"ext-xsl": "*",
		"ext-zlib": "*",
		"knplabs/github-api": "^2.0",
		"php-http/guzzle6-adapter": "^1.1",
		"corneltek/getoptionkit": "^2.6.0",
		"czproject/git-php": "^3.10.0",
		"akeeba/s3": "dev-master",
		"phing/phing": "^2.16.1",
		"pear/http_request2": "^2.3",
		"pear/versioncontrol_svn": ">=0.5.2",
		"pear/archive_tar": "^1.4",
		"pear/versioncontrol_git": ">=0.5.0",
		"rector/rector": ">=0.7"
	},
	"suggest": {
		"ext-ssh2": "*"
	}
}
